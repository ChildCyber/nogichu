                    function showNews(id)
                    {
                        $('div[name="news"]').each(function(){
                            if (id == 1 || id == $(this).attr("data-category"))
                            {
                                $(this).show();
                            }else
                            {
                                $(this).hide();
                            }
                        });

                    }
                </script>

                <div class="text-center">
                    <a class="button large top" href="/blog">更多</a>
                </div>
            </div>

