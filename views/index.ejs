                                <div class="cell small-12 medium-12 large-12" id="news" name="news" data-category="3">
                                    <div class="card">
                                        <div class="card-section">
                                            <span class="">
                                                •
                                                <%= blog.created_at.toLocaleDateString() %>
                                            </span>
                                            <a href="/blog/<%= blog.slug %>">
                                                <h4><%= blog.title %></h4>
                                            </a>
                                        </div> <!-- /.card-section -->
                                    </div> <!-- /.card -->
                                </div> <!-- /.cell -->
                            <% }) %>
