<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">

<%- include('../body-header.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <%- include('../body-site-search.ejs') %>

    <%- include('../body-top-bar.ejs') %>

    <main class="main-content">



        <div class="grid-container">
            <%- data.content %>

            <div>
                <form class="register-form" method="GET" action="/ticket/form/<%= main_id %>/<%= content_id %>">
                    <input type="hidden" name="_token" value="<%= csrf %>">
                    <input name="agree" id="agree_checkbox" type="checkbox" value="1">
                    <label for="agree_checkbox">我已充分理解并同意上述须知及注意事项</label>
                    <input type="hidden" name="ticket_main_id" value="<%= main_id %>">
                    <input type="hidden" name="ticket_content_id" value="<%= content_id %>">
                    <button type="submit" class="button expanded">报名先行门票抽选</button>
                    <div style="text-align: right;margin-top:30px;margin-bottom:30px;">
                        <a href="/ticket/index-content/<%= main_id %>">返回先行申请一览</a>
                    </div>
                </form>
            </div>
        </div>

    </main>

    <%- include('../body-footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>