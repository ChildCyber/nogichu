<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">

<%- include('../body-header.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <%- include('../body-site-search.ejs') %>

    <%- include('../body-top-bar.ejs') %>

    <main class="main-content">
        <div class="grid-container">
            <div class="vspace-2"></div>
            <h4 class="text-center">先行门票抽选报名</h4>
            <hr>
            <div>
                <table>
                    <thead>
                    <tr>
                        <th class="text-center">场次</th>
                        <th width="150">报名开始时间</th>
                        <th width="150">报名截止时间</th>
                        <th width="200">活动状态</th>
                        <th width="150"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% data.forEach((session) => { %>
                    <tr>
                        <td><a href="/ticket/page/<%= session.live_id %>/<%= session.id %>"><%= session.title %></a></td>
                        <td><%= moment(session.enroll_start).format('YYYY-MM-DD HH:mm') %></td>
                        <td><%= moment(session.enroll_end).format('YYYY-MM-DD HH:mm') %></td>

                        <% if (session.status==="enroll") { %>
                            <td>【报名进行中】 </td>
                            <td>
                                <a href="/ticket/page/<%= session.live_id %>/<%= session.id %>" class="button primary" style="color:white; margin-bottom:0px;">申请</a>
                            </td>
                        <% } else { %>
                            <td>【已报名】</td>
                            <td>
                                <a href="/ticket/view/<%= session.live_id %>/<%= session.id %>" class="button ">信息确认</a>
                                <a onclick="ConfirmCancel(<%= session.id %>)" class="button alert">取消</a>
                            </td>
                        <% } %>

                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <form name="form-form-cancel" action="/ticket/cancel" method="post">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <input type="hidden" name="ticket_content_id" id="ticket_content_id">
        </form>

        <script>
            function ConfirmCancel($contentId) {
                if (confirm("您确认要取消本次报名吗？")) {
                    //location.href = "/ticket/cancel/" + $id + "/"+$contentId;
                    $('input:hidden[name="ticket_content_id"]').val($contentId);
                    var f = document.forms["form-form-cancel"];
                    f.method = "POST";
                    f.submit();
                    return true;
                } else {
                    return false;
                }
            }
        </script>
    </main>

    <%- include('../body-footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>