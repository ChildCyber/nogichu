<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">

<%- include('../body-header.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <%- include('../body-site-search.ejs') %>

    <%- include('../body-top-bar.ejs') %>

    <main class="main-content">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <div class="grid-container">
            <div class="vspace-2"></div>
            <h4 class="text-center">提问活动</h4>
            <hr>
            <div>
                <h6 class="text-center">暂无没有相关活动</h6>
            </div>
        </div>
        <script language="javascript">
            $(document).ready(function(){
                $(".put").click(function(){
                    var ret = true;
                    var actid = $(this).data('id');
                    if ($('.info_'+actid).val() == '')
                    {
                        $('.err_info_'+actid).html('<font color=red><b>问题不能为空</b></font>');
                        ret = false;
                    }else
                    {
                        $('.err_info_'+actid).html('');
                    }
                    if ($('.info_'+actid).val().length > 50)
                    {
                        $('.err_info_'+actid).html('<font color=red><b>提问内容请控制在50字以内。</b></font>');
                        ret = false;
                    }
                    if ($('.checkbox_'+actid+':checked').val() != 1 ){
                        $('.err_info_'+actid).html('<font color=red><b>请先同意条款</b></font>');
                        ret = false;
                    }else{
                        $('.err_check_'+actid).html('');
                    }
                    if ($('.member_id_'+actid).val() == 0)
                    {
                        $(".err_member_"+actid).html('<font color=red><b>请选择提问的对象</b></font>');
                        ret = false;
                    }else{
                        $(".err_member_"+actid).html('');
                    }
                    if (ret && window.confirm("确认提交吗？"))
                    {
                        $('.question_form_'+actid).submit();
                    }
                });
            });
        </script>
    </main>

    <%- include('../body-footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>