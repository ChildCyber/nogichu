<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">
<%- include('../bodycommon.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <div class="header-site-search" data-toggle-search>
        <div class="grid-container">
            <div class="grid-x">
                <div class="cell medium-8 medium-offset-2">
                    <form id="search-form" action="/search" method="GET">
                        <div class="input-group">
                            <input class="input-group-field" name="keywords" type="search" value="" placeholder="I'm looking for..." />
                            <div class="input-group-button">
                                <input type="submit" class="button dark" value="Search">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.cell -->
            </div>
            <!-- /.grid -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.header-site-search -->

    <%- include('../header.ejs') %>

    <main class="main-content">
        <form class="login-form" method="POST" action="/login">
            <div class="grid-container">
                <div class="grid-x grid-padding-y">
                    <div class="medium-6 medium-offset-3 cell email">
                        <h4 class="text-center">立即登录</h4>

                        <input type="hidden" name="_token" value="hjWx88FpRjuMQMq12m9RHCzD8pPtadUZahMnwrDK">

                        <% if (locals.err!=undefined) { %>
                            <div class="callout small alert text-center" id="phoneHelpText">
                                <p><%= err %></p>
                            </div>
                        <% } %>

                        <% if (locals.phone!=undefined) { %>
                            <label for="phone">
                                手机号码
                                <input id="phone" type="text" name="phone" value=<%= phone %> aria-describedby="phoneHelpText" required autofocus>
                            </label>
                        <% } else { %>
                            <label for="phone">
                                手机号码
                                <input id="phone" type="text" name="phone" value="" aria-describedby="phoneHelpText" required autofocus>
                            </label>
                        <%}%>

                        <label for="password">
                            密码
                            <input id="password" type="password" name="password" aria-describedby="passwordHelpText" required>
                        </label>

                        <label>
                            <input type="checkbox" name="remember" > 记住账号
                        </label>

                        <button type="submit" class="button expanded">登录</button>

                        <p class="text-center"><a href="/password/reset">忘记密码？</a></p>
                    </div>
                </div>
            </div>
        </form>
    </main>

    <%- include('../footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>