<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
">

<%- include('../body-header.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <%- include('../body-site-search.ejs') %>

    <%- include('../body-top-bar.ejs') %>

    <main class="main-content">
        <div class="page-title2">
            <div class="grid-container">
                <div class="text-center">
                    <img src="/images/blog/news_top_icon.png" style="height: 100px;margin-top:30px;margin-bottom:50px;">
                </div>
                <div class="text-center">
                    <img src="/images/blog/news_title_bg1.png" style="height: 80px;">
                </div>

                <div class="text-center" style="
        	   background-image: url(/images/blog/news_title_bg2.png);
        	   background-repeat: no-repeat;
        	   height:200px;
        ">
                    <h1 style="padding-top:50px;">新闻资讯</h1>
                </div>
            </div>
            <!-- /.grid-container -->
        </div>
        <!-- /.page-title -->

        <div class="vspace-2"></div>
        <div class="vspace-2"></div>

        <div class="grid-container">
            <div class="cell small-12">
                <div class="grid-x grid-padding-x">
                    <div class="cell small-3 medium-3 large-3">
                        <div class="cardMenu">
                            <div class="cardMenu-section" style="color:White;cursor:pointer" onclick="showNews('1');">
                                <!--
                                 -->
                                <span class="">
 			                    	最新资讯
								</span>
                            </div> <!-- /.card-section -->
                        </div> <!-- /.card -->
                    </div> <!-- /.cell -->
                    <div class="cell small-3 medium-3 large-3">
                        <div class="cardMenu">
                            <div class="cardMenu-section" style="color:White;cursor:pointer" onclick="showNews('2');">
                                <!--
                                 -->
                                <span class="">
                                    LIVE相关
                                </span>
                            </div> <!-- /.card-section -->
                        </div> <!-- /.card -->
                    </div> <!-- /.cell -->
                    <div class="cell small-3 medium-3 large-3">
                        <div class="cardMenu">
                            <div class="cardMenu-section" style="color:White;cursor:pointer" onclick="showNews('3');">
                                <!--
                                 -->
                                <span>
                                    会员活动
                                </span>
                            </div> <!-- /.card-section -->
                        </div> <!-- /.card -->
                    </div> <!-- /.cell -->
                    <div class="cell small-3 medium-3 large-3">
                        <div class="cardMenu">
                            <div class="cardMenu-section" style="color:White;cursor:pointer" onclick="showNews('4');">
                                <span>
                                    重要通知
                                </span>
                            </div> <!-- /.card-section -->
                        </div> <!-- /.card -->
                    </div> <!-- /.cell -->
                </div> <!-- /.grid -->
            </div> <!-- /.cell -->
        </div>
        <!-- /.grid-container -->

        <div class="vspace-1"></div>
        <div class="vspace-2"></div>

        <div class="grid-container">
            <div class="cell small-12">
                <div class="grid-x grid-padding-x">
                    <% data.forEach((blog) => { %>
                        <div class="cell small-12 medium-12 large-12" id="news" name="news" data-category="<%= blog.category %>">
                            <div class="card">
                                <div class="card-section">
                                            <span class="">
                                                • <%= blog.created_at.toLocaleDateString() %>
                                            </span>
                                    <a href="/blog/<%= blog.slug %>">
                                        <h4><%= blog.title %></h4>
                                    </a>
                                </div> <!-- /.card-section -->
                            </div> <!-- /.card -->
                        </div> <!-- /.cell -->
                    <% }) %>
                </div>
                <!-- /.grid -->
            </div>
            <!-- /.cell -->
        </div>
        <!-- /.grid-container -->

        <div class="vspace-1"></div>

        <script language="javascript">
            function showNews(id)
            {
                $('div[name="news"]').each(function(){
                    if (id == 1 || id == $(this).attr("data-category")) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        </script>
    </main>

    <%- include('../body-footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>