<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">
<%- include('../bodycommon.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <div class="header-site-search" data-toggle-search>
        <div class="grid-container">
            <div class="grid-x">
                <div class="cell medium-8 medium-offset-2">
                    <form id="search-form" action="/search" method="GET">
                        <div class="input-group">
                            <input class="input-group-field" name="keywords" type="search" value=""
                                   placeholder="I'm looking for..."/>
                            <div class="input-group-button">
                                <input type="submit" class="button dark" value="Search">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.cell -->
            </div>
            <!-- /.grid -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.header-site-search -->

    <%- include('../header.ejs') %>

    <main class="main-content">
        <div class="page-title2">
            <div class="grid-container">
                <div class="text-center">
                    <img src="/images/blog/news_top_icon.png" style="height: 100px;margin-top:30px;margin-bottom:50px;">
                </div>
                <div class="text-center">
                    <img src="/images/blog/news_title_bg1.png" style="height: 80px;">
                </div>

                <div class="text-center" style="
                       background-image: url(/images/blog/news_title_bg2.png);
                       background-repeat: no-repeat;
                       height:200px;
                ">
                    <h1 style="padding-top:50px;"><%= title %></h1>
                    <p><%= created_at.toLocaleDateString() %></p>
                </div>
            </div> <!-- /.grid-container -->
        </div> <!-- /.page-title -->

        <div class="vspace-2"></div>

        <div class="grid-container">
            <div class="grid-x">
                <div class="cell small-12">
                    <%- content %>
                </div> <!-- /.cell -->
            </div> <!-- /.grid -->
        </div> <!-- /.grid-container -->

        <div class="vspace-2"></div>

        <div class="grid-container">
            <div class="cell small-12">
                <div class="grid-x grid-padding-x">
                    <!-- <p>There are currently no posts.</p> -->
                </div>
            </div>
        </div>

        <div class="vspace-1"></div>
        <script language="javascript">
            function showNews(id) {
                $('div[name="news"]').each(function () {
                    if (id == 1 || id == $(this).attr("data-category")) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        </script>

        <div class="vspace-2"></div>
    </main>


    <%- include('../footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>