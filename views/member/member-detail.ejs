<!doctype html>
<html lang="en" class="no-js">

<%- include('../head.ejs') %>

<body style="
    margin-top:120px;
	background-image: url('/images/index/bg_header.png?4');
	background-repeat: no-repeat;
	background-position: top 50px right;
	background-size:600px 159px;
	">
<%- include('../bodycommon.ejs') %>

<div class="off-canvas-content" data-off-canvas-content>
    <div class="header-site-search" data-toggle-search>
        <div class="grid-container">
            <div class="grid-x">
                <div class="cell medium-8 medium-offset-2">
                    <form id="search-form" action="/search" method="GET">
                        <div class="input-group">
                            <input class="input-group-field" name="keywords" type="search" value=""
                                   placeholder="I'm looking for..."/>
                            <div class="input-group-button">
                                <input type="submit" class="button dark" value="Search">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.cell -->
            </div>
            <!-- /.grid -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.header-site-search -->

    <%- include('../header.ejs') %>


    <main class="main-content">
        <div class="grid-container" style="
	/*background-image: url('/images/index/bg_index.png?4');*/
	background-repeat: no-repeat;
	background-position: top 0px right 0px;">

            <div class="vspace-2"></div>
            <div class="text-center">
                <img src="/images/nogizaka-member/member_top_icon.png"
                     style="height: 100px;margin-top:30px;margin-bottom:50px;">
            </div>

            <div class="grid-container">
                <div class="grid-x grid-margin-x grid-padding-x">
                    <div class="cell small-12 medium-12 large-5 text-center">
                        <img class="thumbnail" src=<%= member.photo %> />
                    </div>
                    <div class="cell small-12 medium-12 large-7">
                        <div class="grid-container">
                            <div class="grid-x grid-margin-x grid-padding-x">
                                <div class="cell small-2 medium-2 large-2 align-self-middle">
                                    <img src="/images/nogizaka-member/member_name.png" width="40">
                                </div>
                                <div class="cell small-10 medium-10 large-10">
                                    <span style="font-size:1.6em;color:#454545;"><%= member.name %></span><br>
                                    <span style="color:#cbcbcb;"><%= member.romaji %></span>
                                </div>
                                <div class="cell small-12 medium-12 large-12">
                                    <hr style="border-bottom:4px double #d7bdd5;margin:5px 0;">
                                </div>
                                <div class="cell small-2 medium-2 large-2">
                                    生日
                                </div>
                                <div class="cell small-10 medium-10 large-10">
                                    <%= member.birthday %>
                                </div>
                                <div class="cell small-12 medium-12 large-12">
                                    <hr style="margin:5px 0;">
                                </div>
                                <div class="cell small-2 medium-2 large-2">
                                    血型
                                </div>
                                <div class="cell small-10 medium-10 large-10">
                                    <%= member.blood %>
                                </div>
                                <div class="cell small-12 medium-12 large-12">
                                    <hr style="margin:5px 0;">
                                </div>
                                <div class="cell small-2 medium-2 large-2">
                                    星座
                                </div>
                                <div class="cell small-10 medium-10 large-10">
                                    <%= member.constellation %>
                                </div>
                                <div class="cell small-12 medium-12 large-12">
                                    <hr style="margin:5px 0;">
                                </div>
                                <div class="cell small-2 medium-2 large-2">
                                    身高
                                </div>
                                <div class="cell small-10 medium-10 large-10">
                                    <%= member.height %>cm
                                </div>
                                <div class="cell small-12 medium-12 large-12">
                                    <hr style="margin:5px 0;">
                                </div>

                                <div class="cell small-12 medium-12 large-12" style="margin-top:10px;">
                                    <% for (let i = 0;i < member.tags.length;i++){ %>
                                        <span style="padding:5px 10px;margin:2px;font-weight:bold;background: #dbb7dc; color: #fff; border-radius: 5px; -webkit-border-radius: 5px; -moz-border-radius: 5px;">
                                        <%= member.tags[i] %>
                                        </span>
                                        <span style="margin:2px;"></span>
                                    <% } %>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid-x grid-margin-x grid-padding-x" style="margin-bottom:10%;">
                    <div class="cell small-12 medium-12 large-12">
                        <!--<img src="/images/nogizaka-member/member_title_3.png?1"
                            style="height: 50px;margin-top:30px;margin-bottom:20px;">
                          <hr style="border-bottom:1px solid #eaeaea;margin:20px 0;"> -->
                    </div>
                    <!--
                                <div class="cell small-12 medium-12 large-9" style="margin-left: 3%;">
                                    <img src="/images/nogizaka-member/member_music_1.png" style="margin-bottom:2%;">
                                    <img src="/images/nogizaka-member/member_music_2.png" style="">
                                </div>

                                            <div class="cell small-12 medium-12 large-12">
                                    ニュースは存在しません
                                </div>

                                   -->
                </div>
            </div>
        </div>
    </main>

    <%- include('../footer.ejs') %>
</div>
<!-- /.off-canvas-content -->

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="/js/app.js"></script>
<script>
    $(document).foundation();
</script>
</body>

</html>