<!doctype html>
<html lang="en" class="no-js">

<%- include('./head.ejs') %>

<body style="margin-top:120px;background-image: url('/images/index/bg_header.png?4');background-repeat: no-repeat;background-position: top 50px right;background-size:600px 159px;">

<%- include('./body.ejs') %>

<main class="main-content">
    <div class="grid-container">
        <div class="vspace-2"></div>
        <h4 class="text-center" onclick="f()">博客</h4>
        <hr>
        <div>
            <table>
                <thead>
                <tr>
                    <th>标题</th>
                    <th width="150"></th>
                </tr>
                </thead>
                <tbody>
                <% blogs.forEach((blog) => { %>
                    <tr>
                        <td><%= blog.title %></td>
                        <td>
                            <a href="/admin/blog/<%= blog.title %>">编辑</a> |
                            <a href="">删除</a> |
                            <a href="/blog/<%= blog.slug %>">预览</a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <a class="button tiny line" href="/admin/blog/add">新增</a>
        <a class="button tiny line" href="/admin/blog">更多</a>
    </div>
</main>

<main class="main-content">
    <div class="grid-container">
        <div class="vspace-2"></div>
        <h4 class="text-center">会员</h4>
        <hr>
        <div>
            <table>
                <thead>
                <tr>
                    <th>标题</th>
                    <th width="150"></th>
                </tr>
                </thead>
                <tbody>
                <% pages.forEach((page) => { %>
                    <tr>
                        <td><%= page.title %></td>
                        <td>
                            <a href="/admin/page/<%= page.title %>">编辑</a> |
                            <a href="">删除</a> |
                            <a href="/page/<%= page.slug %>">预览</a> |
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <a class="button tiny line" href="/admin/page/add">新增</a>
        <a class="button tiny line" href="/admin/page">更多</a>
    </div>
</main>

<%- include('./footer.ejs') %>

</body>
</html>